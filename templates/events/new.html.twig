{% extends 'base.html.twig' %}

{% block title %}
    New Event
{% endblock %}

{% block head %}
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="{{ asset('js/index/ie/html5shiv.js') }}"></script><![endif]-->
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/index/main.css') }}" />
	<!--[if lte IE 9]><link rel="stylesheet" href="{{ asset('css/index/ie9.css') }}" /><![endif]-->
	<!--[if lte IE 8]><link rel="stylesheet" href="{{ asset('css/index/ie8.css') }}" /><![endif]-->
    <link rel="stylesheet" href="{{ asset('css/post.css') }}" />
{% endblock %}

{% block javascripts %}
    <!-- Scripts -->
	<script src="{{ asset('js/index/skel.min.js') }}"></script>
	<script src="{{ asset('js/index/util.js') }}"></script>
	<!--[if lte IE 8]><script src="{{ asset('js/index/ie/respond.min.js') }}"></script><![endif]-->
	<script src="{{ asset('js/index/main.js') }}"></script>
    <script src="{{ asset('js/markdown.min.js') }}"></script>
    <script src="{{ asset('js/post.js') }}"></script>
{% endblock %}

{% block body %}
<body class="single">
	<!-- Wrapper -->
	<div id="wrapper">
        {% include 'components/header.html.twig' %}
        {% include 'components/menu.html.twig' %}

		<!-- Main -->
		<div id="main">
			<!-- Post -->
			<article class="post">
                {{ form_start(form) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.eventUrl) }}
                    {{ form_row(form.date) }}
                    {{ form_row(form.time, { attr: { placeholder: '14:30' } }) }}
                    {{ form_row(form.image) }}
                    {{ form_row(form.description, { id : 'post_body', attr : { oninput : "this.editor.update()" }}) }}
                    <hr />
                    <button type="submit">Submit</button>
                {{ form_end(form) }}
                <hr />
                <h3> Description Preview </h3>
                <div id="preview"> </div>
			</article>
		</div>
        {% include 'components/footer.html.twig' %}
	</div>
</div>
{% endblock body %}